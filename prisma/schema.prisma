generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Homestay {
  id                   Int      @id @default(autoincrement())
  userId               String
  email                String   @unique
  title                String
  description          String
  image                String
  locationDescription  String   @db.Text
  addedAt             DateTime @default(now())
  updatesAt           DateTime @default(now())
  rooms               Room[]
  bookings            Booking[]

 
}

model Room {
  id         Int      @id @default(autoincrement())
  title      String
  description String
  image      String
  bedCount   Int      @default(0)
  homestayId Int?
  homestay   Homestay? @relation(fields: [homestayId], references: [id], onDelete: Cascade)
  
  bookings    Booking[]
  @@index([homestayId])
}

model Booking {
  id               Int      @id @default(autoincrement())
  userName         String
  userId           String
  homestayId       Int?
  startDate        DateTime
  endDate          DateTime
  bookedAt         DateTime @default(now())
  homestayOwnerId  String
  homestay         Homestay? @relation(fields: [homestayId], references: [id])
  title            String
  roomId           Int
  room             Room     @relation(fields: [roomId], references: [id])
  description      String
  image            String
  bedCount         Int      @default(0)

  @@index([homestayId])
  @@index([roomId])
}